mport requests
from lxml import etree

# Завантаження XML-файлу
response = requests.get("https://iht.knu.ua/students-tasks/python/film.xml")
xml_content = response.content

# Створення дерева DOM
root = etree.fromstring(xml_content)

# Підрахунок загальної суми box_office і oscars
total_box_office = 0
total_oscars = 0

for movie in root.findall("movie"):
    box_office = movie.find("box_office")
    oscars = movie.find("oscars")

    if box_office is not None and box_office.text.isdigit():
        total_box_office += int(box_office.text)
    if oscars is not None and oscars.text.isdigit():
        total_oscars += int(oscars.text)

print("Загальний прибуток фільмів:", total_box_office)
print("Загальна кількість Оскарів:", total_oscars)

